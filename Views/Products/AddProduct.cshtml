<script>
	document.getElementById("kt_ecommerce_add_product_media").addEventListener("change", function (e) {
		const fileList = document.getElementById("file-list");
		if (this.files.length > 0) {
			fileList.innerHTML = "Selected files: " + Array.from(this.files).map(file => file.name).join(", ");
		} else {
			fileList.innerHTML = "No files selected";
		}
	});
</script>
