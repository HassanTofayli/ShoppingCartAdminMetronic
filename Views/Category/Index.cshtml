@model IEnumerable<ShoppingCartAdminMetronic.Models.Category>

<div class="card mb-5 mb-xl-10">
    <p class="p-4">All Categories</p>
</div>
<div class="card mb-5 mb-xl-10 product-card-list">
    @foreach (var c in Model)
    {
        <a asp-controller="Category" asp-action="CategoryType" asp-route-name="@c.Name">
            <div class="product-wrapper">
                <div class="product-container">
                    <img src="~/media/CategoriesThumbnail/@c.ThumbnailImage" class="product-top">
                    <div class="product-bottom">
                        <div class="product-left">
                            <div class="product-details">
                                <h1 class="product-title" style="font-size:1.3rem">@c.Name</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
